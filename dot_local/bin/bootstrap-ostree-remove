#!/usr/bin/env bash
set -e

PKGS="$HOME/.config/bootstrap/ostree-remove.pkgs"
[ -f "$PKGS" ] || exit 0

# Build list (ignore comments/blank lines)
LIST="$(grep -vE '^\s*#|^\s*$' "$PKGS" | xargs || true)"
[ -n "${LIST:-}" ] || exit 0

echo "rpm-ostree override remove: $LIST"
sudo rpm-ostree override remove $LIST || true

