#!/usr/bin/env bash
set -euo pipefail

NAME="main"
PKGS="$HOME/.config/bootstrap/toolbox-main.pkgs"
[ -f "$PKGS" ] || exit 0

# Build list (ignore comments/blank lines)
LIST="$(grep -vE '^\s*#|^\s*$' "$PKGS" | xargs || true)"
[ -n "${LIST:-}" ] || exit 0

echo "toolbox: $NAME"
#toolbox create -y "$NAME" || true

# Enable COPR for starship
toolbox run -c "$NAME" sudo dnf -y copr enable atim/starship || true

# Install packages
toolbox run -c "$NAME" sudo dnf install -y $LIST

