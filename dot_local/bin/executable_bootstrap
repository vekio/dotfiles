#!/usr/bin/env bash
set -euo pipefail

. "$DOTLIB/log.sh"

bootstrap_dir="$DOTLIB/bootstrap"

run_block() {
  block="$1"
  block_file="$bootstrap_dir/$block.sh"
  if [ -r "$block_file" ]; then
    # shellcheck source=/dev/null
    . "$block_file"
  else
    log_warn "Bootstrap block not found: $block_file"
  fi
}

run_block "brew"
run_block "flatpak"
run_block "codium"
