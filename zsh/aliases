# directories
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'

# paths
alias dot='cd ${DOTFILES}'
alias zz='cd ${ZDOTDIR}'

# ls
alias ls='ls --color=auto'
alias ll='ls -l'
alias la='ls -l --all'
alias l='ls'

# source
alias src='source ${ZDOTDIR}/.zshrc
